---
import { cn } from '@/lib/utils';
import { Icon } from 'astro-icon/components';

export interface Props {
    class?: string;
    [key: string]: any;
}

const { class: className, ...alpineProps } = Astro.props;
---

<span
    role="presentation"
    aria-hidden="true"
    slot="ellipsis"
    class={cn(
        'inline-flex h-9 w-9 items-center justify-center cursor-pointer hover:bg-muted rounded-md transition-colors',
        className
    )}
    {...alpineProps}
>
    <Icon name="lucide:more-horizontal" class="h-4 w-4" />
</span>
