---
import { cn } from '@/lib/utils';

export interface Props {
  size?: 'sm' | 'md' | 'lg';
  class?: string;
  [key: string]: any; // Alpine.js pass-through
}

const { 
  size = 'md',
  class: className = '',
  ...rest
} = Astro.props;

const classes = cn(
  // Base empty state styling
  'text-center text-gray-500',
  
  // Size variants
  size === 'sm' && 'py-6 text-sm',
  size === 'md' && 'py-12 text-lg leading-relaxed',
  size === 'lg' && 'py-16 text-xl leading-relaxed',
  
  className
);
---

<div class={classes} {...rest}>
  <slot />
</div>