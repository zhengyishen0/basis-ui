---
import { cn } from '@/lib/utils';

export interface Props {
    closeable?: boolean;
    className?: string;
    [key: string]: any;
}

const { closeable = true, className, ...alpineProps } = Astro.props;
---

<header
    class={cn('relative flex items-start min-h-16', className)}
    {...alpineProps}
>
    <div class="flex-1 min-w-0">
        <slot />
    </div>

    {
        closeable && (
            <button
                @click="close()"
                class="absolute top-4 right-4 rounded-sm opacity-70 ring-offset-background transition-opacity hover:opacity-100 p-1"
            >
                <svg
                    class="h-4 w-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M6 18L18 6M6 6l12 12"
                    />
                </svg>
            </button>
        )
    }
</header>
