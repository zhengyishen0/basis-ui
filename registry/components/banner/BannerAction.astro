---
import { cn } from '@/lib/utils';

export interface Props {
  href?: string;
  className?: string;
  // Alpine.js pass-through
  [key: string]: any;
}

const { 
  href,
  className,
  ...alpineProps
} = Astro.props;

const Tag = href ? 'a' : 'div';
---

<!-- 
BannerAction Component (shadcn composable style)

Usage:
<BannerAction>Learn more</BannerAction>
<BannerAction href="/learn-more">Visit page</BannerAction>
<BannerAction @click="handleAction()">Custom action</BannerAction>

Features:
- Flexible action wrapper (div or link)
- Alpine.js pass-through for custom actions
- Consistent styling and positioning
- Customizable appearance
-->

<Tag 
  href={href}
  class={cn(
    "ml-auto flex-shrink-0",
    className
  )}
  {...alpineProps}
>
  <slot />
</Tag>