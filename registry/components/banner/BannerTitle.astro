---
import { cn } from '@/lib/utils';

export interface Props {
  className?: string;
  // Alpine.js pass-through
  [key: string]: any;
}

const { 
  className,
  ...alpineProps
} = Astro.props;
---

<!-- 
BannerTitle Component (shadcn composable style)

Usage:
<BannerTitle>Important message</BannerTitle>
<BannerTitle class="text-lg">Custom styled title</BannerTitle>

Features:
- Consistent banner title styling
- Alpine.js pass-through
- Customizable styling
- Proper semantic heading
-->

<h5 
  class={cn(
    "font-medium leading-none tracking-tight",
    className
  )}
  {...alpineProps}
>
  <slot />
</h5>