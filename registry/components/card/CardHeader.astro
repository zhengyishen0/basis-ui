---
import { cn } from '@/lib/utils';

export interface Props {
    class?: string;
    [key: string]: any; // Alpine.js pass-through
}

const { class: className, ...alpineProps } = Astro.props;
---

<div
    class={cn(
        'flex flex-col gap-y-1.5 card-header justify-start p-sm items-start',
        className
    )}
    {...alpineProps}
>
    <slot />
</div>
