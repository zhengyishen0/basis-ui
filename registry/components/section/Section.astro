---
import { cn } from '@/lib/utils';

export interface Props {
    tag?: 'section' | 'div' | 'article' | 'aside';
    align?: 'left' | 'center' | 'right';
    class?: string;
    [key: string]: any; // Alpine.js pass-through
}

const {
    tag = 'section',
    align = 'center',
    class: className = '',
    ...alpineProps
} = Astro.props;

const alignClasses = {
    left: 'items-start',
    center: 'items-center',
    right: 'items-end',
};

const classes = cn(alignClasses[align], className);

const Tag = tag;
---

<Tag class={classes} {...alpineProps}>
    <slot />
</Tag>
