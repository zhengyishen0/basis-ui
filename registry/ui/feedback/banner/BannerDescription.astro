---
import { cn } from '@/lib/utils';

export interface Props {
  className?: string;
  // Alpine.js pass-through
  [key: string]: any;
}

const { 
  className,
  ...alpineProps
} = Astro.props;
---

<!-- 
BannerDescription Component (shadcn composable style)

Usage:
<BannerDescription>Additional details about the banner message</BannerDescription>
<BannerDescription class="text-xs">Smaller description text</BannerDescription>

Features:
- Consistent banner description styling
- Alpine.js pass-through
- Customizable styling
- Proper text styling for readability
-->

<div 
  class={cn(
    "text-sm [&_p]:leading-relaxed",
    className
  )}
  {...alpineProps}
>
  <slot />
</div>