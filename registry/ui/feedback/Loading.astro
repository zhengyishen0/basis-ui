---
import { cn } from '@/lib/utils';

export interface Props {
  size?: 'sm' | 'md' | 'lg';
  spinner?: boolean;
  class?: string;
  [key: string]: any; // Alpine.js pass-through
}

const { 
  size = 'md',
  spinner = false,
  class: className = '',
  ...rest
} = Astro.props;

const classes = cn(
  // Base loading state styling
  'text-center text-gray-600',
  
  // Size variants
  size === 'sm' && 'py-6 text-sm',
  size === 'md' && 'py-12 text-lg',
  size === 'lg' && 'py-16 text-xl',
  
  // Spinner layout
  spinner && 'flex items-center justify-center gap-3',
  
  className
);
---

<div class={classes} {...rest}>
  {spinner && (
    <div class="animate-spin rounded-full h-5 w-5 border-2 border-gray-300 border-t-gray-600"></div>
  )}
  <slot />
</div>