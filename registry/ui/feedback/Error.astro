---
import { cn } from '@/lib/utils';

export interface Props {
  variant?: 'error' | 'warning' | 'info' | 'success';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
  [key: string]: any; // Alpine.js pass-through
}

const { 
  variant = 'error',
  size = 'md',
  class: className = '',
  ...rest
} = Astro.props;

const classes = cn(
  // Base alert styling
  'relative w-full border rounded-lg',
  
  // Size variants
  size === 'sm' && 'p-3 text-sm',
  size === 'md' && 'p-4 text-base',
  size === 'lg' && 'p-6 text-lg',
  
  // Variant colors
  variant === 'error' && 'bg-red-50 border-red-200 text-red-800',
  variant === 'warning' && 'bg-yellow-50 border-yellow-200 text-yellow-800',
  variant === 'info' && 'bg-blue-50 border-blue-200 text-blue-800',
  variant === 'success' && 'bg-green-50 border-green-200 text-green-800',
  
  className
);
---

<div class={classes} {...rest}>
  <slot />
</div>