---
import { cn } from '@/lib/utils';

export interface Props {
  align?: 'left' | 'center' | 'right';
  class?: string;
  [key: string]: any;
}

const { 
  align = 'left',
  class: className, 
  ...alpineProps 
} = Astro.props;

const alignClasses = {
  left: 'text-left',
  center: 'text-center', 
  right: 'text-right'
};
---

<td 
  class={cn(
    "p-4 align-middle [&:has([role=checkbox])]:pr-0 text-sm",
    alignClasses[align],
    className
  )}
  {...alpineProps}
>
  <slot />
</td>