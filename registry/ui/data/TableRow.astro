---
import { cn } from '@/lib/utils';

export interface Props {
  selected?: boolean;
  class?: string;
  [key: string]: any;
}

const { selected = false, class: className, ...alpineProps } = Astro.props;
---

<tr 
  class={cn(
    "border-b transition-colors hover:bg-muted/50 data-[state=selected]:bg-muted",
    selected && "bg-muted/50",
    className
  )}
  {...alpineProps}
>
  <slot />
</tr>