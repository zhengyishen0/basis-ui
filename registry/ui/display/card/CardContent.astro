---
import { cn } from '@/lib/utils';

export interface Props {
    class?: string;
    [key: string]: any; // Alpine.js pass-through
}

const { class: className, ...alpineProps } = Astro.props;
---

<div
    class={cn(
        'flex-1 w-full h-full flex flex-col card-content min-h-0 flex flex-col p-sm justify-start items-stretch',
        className
    )}
    {...alpineProps}
>
    <slot />
</div>
