---
import { cva, type VariantProps } from 'class-variance-authority';
import { cn } from '@/lib/utils';

const triggerVariants = cva('inline-block', {
    variants: {
        variant: {
            default: '',
            button: 'rounded-md px-4 py-2 bg-primary text-white hover:bg-primary/90',
            outline: 'rounded-md px-4 py-2 border border-input hover:bg-accent',
            ghost: 'hover:bg-accent hover:text-accent-foreground',
        },
    },
    defaultVariants: { variant: 'default' },
});

export interface Props extends VariantProps<typeof triggerVariants> {
    className?: string;
    [key: string]: any;
}

const { variant = 'default', className, ...alpineProps } = Astro.props;
---

<div
    @click="toggle()"
    :aria-expanded="open"
    :aria-controls="dialogId"
    class={cn(triggerVariants({ variant }), className)}
    {...alpineProps}
>
    <slot />
</div>