---
import { cn } from '@/lib/utils';

export interface Props {
    className?: string;
    group?: any; // Dynamic group data
    [key: string]: any;
}

const { className, group, ...alpineProps } = Astro.props;

// Extract x-text from alpineProps for dynamic text binding
const {
    'x-text': xText,
    ...restProps
} = alpineProps;
---

<div class={cn('py-1', className)} role="group" {...restProps}>
    {xText && (
        <div
            x-text={xText}
            class="block w-full px-3 py-1.5 text-xs font-semibold text-muted-foreground text-left"
        />
    )}
    <slot />
</div>
